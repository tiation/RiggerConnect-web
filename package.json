{
  "name": "riggerconnect-web",
  "version": "1.0.0",
  "private": true,
  "description": "RiggerConnect - Job advertising platform for Riggers, Doggers and Crane Operators in Western Australia. Supporting ChaseWhiteRabbit NGO.",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "db:migrate": "./database/migrate.sh migrate",
    "db:types": "./database/migrate.sh types",
    "db:validate": "./database/migrate.sh validate",
    "db:init": "./database/migrate.sh init",
    "db:backup": "./database/migrate.sh backup"
  },
  "dependencies": {
    "@rigger/shared": "file:../RiggerShared/rigger-shared-1.0.0.tgz",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^14.5.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.4.2",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/coverage/**"
    ],
    "coverageReporters": ["text", "lcov", "cobertura"],
    "reporters": ["default", "jest-junit"]
  }
}
